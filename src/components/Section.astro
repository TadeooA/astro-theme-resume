---
import { cn } from '@/utils'

const { class: className, title } = Astro.props
---

<section class={cn(className, 'flex flex-col justify-stretch gap-x-2 gap-y-2 md:flex-row md:gap-y-0')}>
	<div class='text-xl font-semibold  md:w-1/3  '>
		<h2 class=" text-gray-500 dark:text-white">{title}</h2>
	</div>
	<div class='flex flex-col gap-y-10 md:w-2/3'>
		<slot />
	</div>
</section>
